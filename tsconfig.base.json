{
    "compilerOptions": {
      "jsx": "react-jsx",           // Enable React JSX (React 17+)
      "strict": true,               // Enable strict type checking
      "esModuleInterop": true,      // Allow default imports from CommonJS
      "moduleResolution": "node",   // Use Node.js-style resolution
      "allowSyntheticDefaultImports": true, // Allow default imports even if not in TypeScript
      "target": "ES2020",           // Specify ECMAScript target version
      "module": "ESNext",           // Use ESNext module syntax
      "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include relevant libraries
      "skipLibCheck": true          // Skip type checking for library files
    }
  }
